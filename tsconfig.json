{
  "compilerOptions": {
    "target": "ES2022",              // Use ES2022 for the output
    "module": "ESNext",              // Use ESNext modules for modern JS
    "strict": true,                  // Enable strict type-checking
    "esModuleInterop": true,         // Allow interop with CommonJS modules
    "skipLibCheck": true,            // Skip library type checking for speed
    "forceConsistentCasingInFileNames": true, // Enforce case-sensitivity in imports
    "outDir": "./public",            // Output the compiled JS to the public folder
    "moduleResolution": "node",      // Use Node.js style module resolution
    "declaration": false             // Disable declaration files
  },
  "include": [
    "public/script.ts"               // Explicitly include the script.ts file
  ],
  "exclude": [
    "node_modules"                   // Default exclude: node_modules folder
  ]
}

