{
  "compilerOptions": {
    "target": "es2022",          // Use ES2022 for modern JavaScript features
    "module": "esnext",
    "outDir": "./public",        // Output directory for compiled files (inside public folder)
    "rootDir": "./public",       // Input directory (source files are in public)
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "public/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public/script.js"  // Don't include the compiled JS file in TypeScript compilation
  ]
}


